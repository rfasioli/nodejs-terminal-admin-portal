<!-- views/login.ejs -->
<!doctype html>
<html>
  <head>
    <% include partials/head %>    
    <link rel="stylesheet" href="./login.css">
  </head>
  <body class="transition skin-orion layout-top-nav">
    <header class="main-header">
      <nav class="navbar navbar-static-top">
        <div class="container">
          <div class="navbar-header">
            <a href="#" class="navbar-brand"><b>Tesoureiro</b> Eletrônico</a>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
              <i class="fa fa-bars"></i>
            </button>
          </div>
        </div>
      </nav>
    </header>
    
    <div class="content-wrapper">
      <div class="container">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>Controle de Acesso<small>Portal Administrativo</small></h1>
          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>
        </section>
        
        <section class="content">
          <form class="form-signin" action="/login" method="post" >
            <h2 class="form-signin-heading"><span class="fa fa-sign-in"></span>Autenticação do usuário</h2>
            <div class="form-group has-feedback">
              <label for="inputIdentificador" class="sr-only control-label">Identificador</label>
              <input name="identificador" type="text" id="inputIdentificador" class="form-control" required autofocus />
            </div>
            <div class="form-group">
              <label for="inputPassword" class="sr-only">Senha</label>
              <input name="password" type="password" id="inputPassword" class="form-control" placeholder="senha" required>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="remember-me"> Lembrar-me neste computador
              </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
          </form>
        </section>
      </div> <!-- /container -->
    </div> <!-- /content-wrapper -->
    
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b> 2.3.0
      </div>
      <strong>Copyright &copy; 2016 <a href="http://www.orion.inf.br">Orion Informática</a>.</strong> All rights reserved.
    </footer>
    
    <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.js"></script> -->
    <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="dist/js/app.min.js"></script>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">  -->
    <link rel="stylesheet" href="/plugins/font-awesome-4.6.1/css/font-awesome.min.css"> 
  </body>
</html>