<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    
    <link rel="stylesheet" href="./monitoramento.css">
  </head>
  
  <body class="hold-transition skin-orion sidebar-mini">
    <div class="wrapper">
      
      <!-- PAGE HEADER -->
      <% include ../partials/header %>
      
      <!-- SIDE BAR MENU -->
      <% include ../partials/menu %>
      
      <!-- PAGE CONTENT -->
      <!-- PAGE CONTENT -->
      <!-- PAGE CONTENT -->
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Painel de controle
            <small>Monitoramento de Terminais</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Monitoramento</li>
            <li class="active">Terminais</li>
          </ol>
        </section>
        
        <!-- Main content -->
        <section class="content">
          <div class="table-responsive" ng-app="monitoramentoApp" ng-controller="monitoramentoController">
          <!-- <div class="table-responsive" ng-app="monitoramentoApp" ng-controller="monitoramentoController"> -->
            <table class="table table-condensed table-striped table-bordered table-hover no-margin">
              <thead>
                <tr>
                  <th style="width:5%">
                    <input class="no-margin" type="checkbox">
                  </th>
                  <th style="width:8%">Terminal</th>
                  <th style="width:12%">Descrição</th>
                  <th style="width:12%">Estabelecimento</th>
                  <th style="width:5%" class="hidden-phone">Terminal</th>
                  <th style="width:5%" class="hidden-phone">Validador</th>
                  <th style="width:5%" class="hidden-phone">Impressora</th>
                  <th style="width:5%" class="hidden-phone">Biometria</th>
                  <th style="width:5%" class="hidden-phone">Porta</th>
                  <!--                   
                    <th style="width:5%" class="hidden-phone">Energia</th>
                    <th style="width:5%" class="hidden-phone">Vibração</th>
                    <th style="width:5%" class="hidden-phone">Gabinete</th>
                    <th style="width:5%" class="hidden-phone">Malote</th>
                    <th style="width:5%" class="hidden-phone">Temperatura</th>
                  -->                  
                  <th style="width:20%">Data Sonda</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="terminal in terminais">
                  <td style="width:5%">
                    <input class="no-margin" type="checkbox">
                  </td>
                  <td><a href="/monitoramento/detalhe?id={{terminal.ID_TERMINAL}}&nr_terminal={{terminal.NR_TERMINAL}}">{{terminal.NR_TERMINAL}}</a></td>
                  <td>{{terminal.DS_TERMINAL}}</td>
                  <td>{{terminal.DS_NOME_SITE}}</td>
                  <td align="center">
                    <div id="circulo_ext">
                      <div id="circulo" class="ST_TERMINAL" data-color="{{terminal.ST_TERMINAL}}">
                        <span class="label-status">{{terminal.ST_TERMINAL}}</span>
                      </div>
                    </div>
                  </td>
                  <td align="center">
                    <div id="circulo_ext">
                      <div id="circulo" class="ST_VALIDADOR" data-color="{{terminal.ST_VALIDADOR}}">
                        <span class="label-status">{{terminal.ST_VALIDADOR}}</span>
                      </div>
                    </div>
                    </td>
                  <td align="center">
                    <div id="circulo_ext">
                      <div id="circulo" class="ST_IMPRESSORA" data-color="{{terminal.ST_IMPRESSORA}}">
                        <span class="label-status">{{terminal.ST_IMPRESSORA}}</span>
                      </div>
                    </div>
                  </td>
                  <td align="center">
                    <div id="circulo_ext">
                      <div id="circulo" class="ST_BIOMETRIA" data-color="{{terminal.ST_BIOMETRIA}}">
                        <span class="label-status">{{terminal.ST_BIOMETRIA}}</span>
                      </div>
                    </div>
                  </td>
                  <td align="center">
                    <div id="circulo_ext">
                      <div id="circulo" class="ST_PORTA" data-color="{{terminal.ST_PORTA}}">
                        <span class="label-status">{{terminal.ST_PORTA}}</span>
                        </div>
                    </div>
                  </td>
                  <!--                   
                    <td align="center"><div id="circulo" data-color="{{terminal.ST_ENERGIA%10}}"></td>
                    <td align="center"><div id="circulo" data-color="{{terminal.ST_VIBRACAO%10}}"></td>
                    <td align="center"><div id="circulo" data-color="{{terminal.ST_PORTA_GABINETE%10}}"></td>
                    <td align="center"><div id="circulo" data-color="{{terminal.ST_PRESENCA_MALOTE%10}}"></td>
                    <td align="center"><div id="circulo" data-color="{{terminal.ST_TEMPERATURA%10}}"></td>
                  -->                    
                  <td>
                    {{terminal.DT_ULT_SONDA | date:'dd/MM/yyyy HH:mm:ss'}}
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      
      
      <!-- PAGE FOOTER -->
      <% include ../partials/footer %>
      
      <!-- CONTROLS -->
      <% include ../partials/controls %>
      
      <script src="controllers/monitoramento.js"></script>
      
    </div>
  </body>
</html>
